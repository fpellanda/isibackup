set -e
#set -vx 
. "/usr/share/debconf/confmodule"

PACKAGE="isibackup"
CONFIG_PATH="/etc/$PACKAGE"
CONFIG_FILE="$CONFIG_PATH/isibackup.conf"
PARAMETERS_CONF="BACKUP_ROOT CMD_CRYPT OPT_PACKMETHOD CRYPT_KEYS"

. "/usr/lib/libisi/lib_conf.sh"

# update config files
CONFIG="$(<$CONFIG_FILE)"
CONFIG=$(update_config_from_debconf "$CONFIG" "$PARAMETERS_CONF")
echo "$CONFIG" > "$CONFIG_FILE"

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
